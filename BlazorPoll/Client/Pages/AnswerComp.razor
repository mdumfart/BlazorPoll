<div class="answer-wrapper">
    <div class="answer-header">
        Answer @(Item.Id + 1)
    </div>
    <div class="answer-content">
        <div class="input-group input-group-lg input-create-poll">
            <InputText class="form-control input-answer" placeholder="Answer" @bind-Value="Item.Content" />
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Answer Item { get; set; }
}